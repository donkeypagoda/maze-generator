{
  "name": "@sbj42/maze-generator",
  "version": "1.0.0",
  "description": "A simple maze generator",
  "main": "src",
  "scripts": {
    "demo": "node demo/demo",
    "test": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sbj42/maze-generator.git"
  },
  "keywords": [
    "maze"
  ],
  "author": "James Clark <jameswclark@gmail.com> (http://arbitraryclark.blogspot.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sbj42/maze-generator/issues"
  },
  "homepage": "https://github.com/sbj42/maze-generator#readme",
  "devDependencies": {
    "eslint": "^3.7.1",
    "mocha-sugar-free": "^1.3.1",
    "random-js": "^1.0.8"
  },
  "eslintConfig": {
    "env": {
      "commonjs": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": ["error", 4],
        "semi": "error",
        "block-scoped-var": "error",
        "class-methods-use-this": "error",
        "default-case": "error",
        "comma-dangle": ["error", "never"],
        "no-tabs": "error",
        "quotes": ["error", "single"]
    },
    "root": true
  }
}
